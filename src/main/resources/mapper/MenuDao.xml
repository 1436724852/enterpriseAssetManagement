<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jtj.web.dao.MenuDao">

    <insert id="add">
        INSERT INTO auth_menu(name,menu, level, pid, `order`, type,icon,url,static_url,permission_id)
        VALUES (#{name},#{menu},#{level},#{pid},#{order},#{type},#{icon},#{url},#{staticUrl},#{permissionId})
    </insert>

    <update id="update">
        UPDATE auth_menu
        <set>
            <if test=" name != '' and name != null ">
                name = #{name},
            </if>
            <if test=" menu != '' and menu != null ">
                menu = #{menu},
            </if>
            <!-- 暂不支持父节点修改 -->
            <!--<if test="level != null">
                level = #{level},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>-->
            <if test="order != null">
                `order` = #{order},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="icon != null ">
                icon = #{icon},
            </if>
            <if test="url != null ">
                url = #{url},
            </if>
            <if test="staticUrl != null ">
                static_url = #{staticUrl},
            </if>
            permission_id = #{permissionId},
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM auth_menu WHERE id IN
        <foreach collection="ids" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <sql id="permissionConditions">
        <if test="id != null">
            AND ${alias}.id = #{id}
        </if>
        <if test="name != null and name != ''">
            AND ${alias}.name = #{name}
        </if>
        <if test="menu != null and menu != ''">
            AND ${alias}.menu = #{menu}
        </if>
        <if test="level != null">
            AND ${alias}.level = #{level}
        </if>
        <if test="pid != null">
            AND ${alias}.pid = #{pid}
        </if>
        <if test="order != null">
            AND ${alias}.order = #{order}
        </if>
        <if test="type != null">
            AND ${alias}.type = #{type}
        </if>
    </sql>

    <select id="getList" resultType="Menu">
        SELECT
        am.*,
        ap.name "permission.name",
        ap.url "permission.url"
        FROM auth_menu am
        LEFT JOIN auth_permission ap ON am.permission_id = ap.id
        <where>
            <include refid="permissionConditions">
                <property name="alias" value="am"/>
            </include>
        </where>
        ORDER BY am.pid ASC ,am.`order` ASC
        LIMIT #{begin},#{offset}
    </select>

    <select id="getNum" resultType="int">
        SELECT
        count(1)
        FROM auth_menu am
        <where>
            <include refid="permissionConditions">
                <property name="alias" value="am"/>
            </include>
        </where>
    </select>

    <select id="getMenu" resultType="Menu">
        SELECT
        am.*
        FROM auth_menu am
        <where>
            <include refid="permissionConditions">
                <property name="alias" value="am"/>
            </include>
        </where>
        ORDER BY am.pid ASC ,am.`order` ASC
    </select>

    <select id="getMapById" resultType="KeyValue">
        SELECT
            am.id "key",
            am.name "value"
        FROM auth_menu am
        WHERE am.pid = #{pid} AND am.type = 1
        ORDER BY am.`order` ASC
    </select>

    <select id="getById" resultType="Menu">
        SELECT am.* FROM auth_menu am WHERE am.id = #{id}
    </select>

</mapper>